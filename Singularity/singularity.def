bootstrap: docker
from: docker.io/bioconductor/ml-verse:RELEASE_3_20-R-4.4.2

# this bioconductor/ml-verse image was built from a rocker :latest image;
# pin CRAN to specific dates corresponding to rocker image:
# https://github.com/rocker-org/rocker-versioned2/wiki/Versions
%post
    apt update
    apt install -y libsecret-1-dev
    echo 'options(repos = c(CRAN = "https://p3m.dev/cran/__linux__/ noble/2025-02-27"), download.file.method = "libcurl")' >> $(R RHOME)/etc/Rprofile.site
